package ex01;

public class Student {
//김주선
	
	//필드
	int studentNumber;
	String studentName;
	int[] grades;
	
	//매개변수 2개 있는 생성자
	public Student(String studentName, int[] grades) {
		super();
		this.studentName = studentName;
		this.grades = grades;
		this.studentNumber= 0; //초기값 설정
	}
	
	//메소드
	//성적정보 보기 메소드
	void showGradeInfo() {
		System.out.println("===성적 정보===");
		System.out.println(this.studentNumber + "." + this.studentName );
	}
}
